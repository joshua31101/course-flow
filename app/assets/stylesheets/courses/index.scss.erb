html {
  height: 100%;
}
body {
  min-height: 100%;
}

.courses-container {
  text-align: center;
}

.title {
  font-family: 'Pacifico', cursive;
  text-align: center;
  font-size: 58px;
  margin-top: 100px;
  color: #335170;
}

.title2 {
  font-family: 'Pacifico', cursive;
  text-align: center;
  font-size: 58px;
  margin-top: 100px;
  color: #eeb211;
}

.search_form {
  margin: auto;
  margin-top: 50px;
  width: fit-content;
}

.search_icon {
  width: 25px;
  height: 25px;
  position: absolute;
  top: 12px;
  left: 11px;
  opacity: .6;
}

.search_button {
  outline: none;
  display: inline-block;
  border-radius: 0px;
  background: #00254c !important;
  border: none;
  height: 42px;
  width: 80px;
  margin-bottom: 2px;
  &:hover {
    z-index: 1;
    box-shadow: 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12), 0 2px 4px -1px rgba(0,0,0,.2);
  }
}

input[type=text]#course_input {
  box-sizing: border-box;
  border: 1px solid rgb(244, 194, 13);
  font-size: 16px;
  background-color: white;
  background-position: 10px 10px;
  background-repeat: no-repeat;
  padding: 12px 20px 12px 40px;
  -webkit-transition: width 0.4s ease-in-out;
  transition: width 0.4s ease-in-out;
  width: 500px;
  display: inline-block;
  height: inherit;
}

input[type=text]#course_input:focus {
  box-shadow: 0 5px 30px rgba(244, 194, 13, 0.25);
}

input::placeholder {
  font-size: 14px;
}

.form {
  display: inline-block;
  width: 510px;
  font-family: 'Montserrat', sans-serif;
  position: relative;
}

/* Graph */
.node {
  cursor: pointer;
}

.node circle {
  fill: #fff;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.node text {
  font-family: 'Roboto', sans-serif;
  font-size: 17px;
  font-weight: 500;
}

.link {
  fill: none;
  stroke: #000;
  stroke-width: 1px;
}

.error {
  color: #a94442;
}

@keyframes spinner {
  to {transform: rotate(360deg);}
}

.spinner:before {
  content: '';
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 50px;
  height: 50px;
  margin-top: -10px;
  margin-left: -10px;
  border-radius: 50%;
  border: 2px solid #ccc;
  border-top-color: #333;
  animation: spinner .6s linear infinite;
}

/* Tooltip */
.d3-tip {
  border: 1px solid #335170;
  padding: 15px;
  max-width: 280px;
  color: #fff;
  border-radius: 2px;
  background-color: #fff;
  font-weight: bold;
  line-height: 1.2;
  color: #335170;
  p {
    margin: 5px 0 0;
  }
}
/* Creates a small triangle extender for the tooltip */
.d3-tip:after {
  box-sizing: border-box;
  display: inline;
  font-size: 10px;
  width: 100%;
  line-height: 1;
  color: rgba(0, 0, 0, 0.8);
  content: "\25BC";
  position: absolute;
  text-align: center;
}
/* Style northward tooltips differently */
.d3-tip.n:after {
  margin: -1px 0 0 0;
  top: 100%;
  left: 0;
}
