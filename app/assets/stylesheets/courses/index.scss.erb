.search_form {
  margin: auto;
  margin-top: 50px;
  width: fit-content;
}

.search_icon {
  width: 25px;
  height: 25px;
  position: absolute;
  top: 12px;
  left: 11px;
  opacity: .6;
}

.search_button {
  outline: none;
  display: inline-block;
  border-radius: 0px;
  background: hsl(235, 100%, 65%) !important;
  border: none;
  height: 42px;
  width: 80px;
  margin-bottom: 2px;
}

input[type=text] {
  box-sizing: border-box;
  border: 1px solid rgb(244, 194, 13);
  font-size: 16px;
  background-color: white;
  background-image: url("<%= asset_path('searchicon.png') %>") ;
  background-position: 10px 10px;
  background-repeat: no-repeat;
  padding: 12px 20px 12px 40px;
  -webkit-transition: width 0.4s ease-in-out;
  transition: width 0.4s ease-in-out;
  width: 500px;
  display: inline-block;
  box-shadow: 0 5px 30px rgba(244, 194, 13, 0.25);
}

input::placeholder {
  font-size: 14px;
}

.form {
  display: inline-block;
  width: 510px;
  font-family: 'Montserrat', sans-serif;
  position: relative;
}

/* Graph */
.node {
  cursor: pointer;
}

.node circle {
  fill: #fff;
  stroke: steelblue;
  stroke-width: 1.5px;
}

.node text {
  font: 10px sans-serif;
}

.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1.5px;
}
